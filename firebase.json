{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/assets/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800, immutable"
          }
        ]
      }
    ]
  }
}